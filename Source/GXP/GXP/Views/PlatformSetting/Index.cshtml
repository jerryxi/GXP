                    <tr>
                    <td><label for="Description">Description：</label></td>
                    <td><input class="easyui-textbox" type="text" id="Description" name="Description" /></td>
                    </tr>
                    <tr>
                    <td><label for="Value">Value：</label></td>
                    <td><input class="easyui-textbox" type="text" id="Value" name="Value" /></td>
                    </tr>
                    <tr>
                    <td><label for="DefaultValue">DefaultValue：</label></td>
                    <td><input class="easyui-textbox" type="text" id="DefaultValue" name="DefaultValue" /></td>
                    </tr>
                    <tr>
                    <td><label for="CreatedBy">CreatedBy：</label></td>
                    <td><input class="easyui-textbox" type="text" id="CreatedBy" name="CreatedBy" /></td>
